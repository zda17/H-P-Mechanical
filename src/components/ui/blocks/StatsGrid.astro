---
import Icon from "@components/ui/icons/Icon.astro";

const { count, description, index } = Astro.props;

interface Props {
  count: string;
  description: string;
  index: number;
}
---

<li class="group flex flex-col rounded-xl bg-gradient-to-br from-neutral-50 to-neutral-100 p-6 shadow-sm transition-all duration-300 hover:shadow-lg dark:from-neutral-600 dark:to-neutral-700 dark:hover:shadow-xl sm:p-8">
  <div
    class="mb-3 flex items-end gap-x-2 text-3xl font-bold text-neutral-800 dark:text-neutral-200 sm:text-5xl"
  >
    {index === 1 || index === 2 ? <Icon name="arrowUp" /> : null}
    <span class="text-red-500 dark:text-red-500">
      {count}
    </span>
  </div>
  <p class="text-sm leading-relaxed text-neutral-600 dark:text-neutral-400 sm:text-base">
    {description}
  </p>
</li>
