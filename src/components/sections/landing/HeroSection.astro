---
// Import the necessary dependencies
import { Image } from "astro:assets";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";

import HeroImage from "@images/hero-image-2.jpg";
import HeroImageAlt from "@images/H&P-office.jpeg";
import TruckImg from "@images/truck.png";
---

<!-- Defining a grid container that holds all the content -->
<section class="hidden md:block md:mt-[-10%] rounded-3xl">
  <div class="relative rounded-2xl">
    <!-- Hero Image Section -->
    <div class="relative overflow-hidden rounded-lg shadow-2xl h-[90vh]">
      <!-- Gradient Overlay for better text readability -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/50 to-black/70 z-10"></div>
      
      <Image
        src={HeroImageAlt}
        alt="H&P Office"
        class="h-full w-full object-cover transition-transform duration-700 hover:scale-105 blur-sm"
        draggable={"false"}
        loading={"eager"}
        format={"avif"}
      />
      
      <!-- Added SVG Wave with improved styling -->
      <div class="absolute bottom-0 left-0 w-full z-10">
        <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
          <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" 
            fill="#EF4444" class="drop-shadow-lg"/>
        </svg>
      </div>
    </div>

    <!-- Content Section with improved positioning and styling -->
    <div class="absolute inset-0 z-20 flex items-start pt-32 lg:pt-40">
      <div class="px-8 py-12 lg:px-12 lg:py-16 w-full lg:w-2/3 max-w-4xl">
        <h1 class="block text-balance text-5xl lg:text-7xl font-bold tracking-tight text-white lg:leading-tight drop-shadow-lg">
          <Fragment set:html="Your Local Heating & Air Specialists" />
        </h1>
        <p class="mt-4 lg:mt-6 text-pretty text-lg lg:text-xl leading-relaxed text-neutral-100 lg:w-5/6 drop-shadow-md">
          Providing expert heating, cooling, and ventilation services throughout the region. Residential or commercial. Weâ€™re ready to earn your trust!
        </p>
        <div class="mt-8 lg:mt-10 grid w-full gap-4 sm:inline-flex sm:gap-4">
          <PrimaryCTA
            title="(918) 426-2889"
            url="tel:+19184262889"
            noArrow
          />
          <SecondaryCTA
            title="Get a Quote"
            url="/contact"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<section
  class="md:hidden sm:block mx-auto grid max-w-[85rem] gap-4 px-4 pt-14 pb-0 sm:px-6 md:grid-cols-2 md:items-center md:gap-8 lg:px-8 2xl:max-w-full"
>
  <!-- Title and description -->
  <div>
    <!-- Each h1 and p tag renders a portion of the title and subTitle defined above -->
    <h1
      class="block text-balance text-3xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 sm:text-4xl lg:text-6xl lg:leading-tight"
    >
      <!-- About Fragment: https://docs.astro.build/en/basics/astro-syntax/#fragments -->
      <Fragment set:html="Your Local Heating & Air Specialists" />
    </h1>
    <p
      class="mt-3 text-pretty text-lg leading-relaxed text-neutral-700 dark:text-neutral-400 lg:w-4/5"
    >
    Providing expert heating, cooling, and ventilation services throughout the region. Residential or commercial. We're ready to earn your trust!
  </p>
    <!-- Action Button Section: This section includes two CTAs with their own styles and URL -->
    <div class="mt-7 grid w-full gap-3 sm:inline-flex">
      <PrimaryCTA
        title="(918) 426-2889"
        url="tel:+19184262889"
        noArrow
      />
      <SecondaryCTA
        title="Get Quote"
        url="/contact"
      />
    </div>

  </div>
  <!-- Hero Image Section -->
  <div class="flex w-full">
      <div class="top-12 overflow-hidden rounded-lg">
        <Image
              src={HeroImageAlt}
              alt="H&P Office"
              class="h-full w-full object-cover object-center rounded-lg"
              draggable={"false"}
              loading={"eager"}
              format={"avif"}
        />
    </div>
  </div>
</section>
