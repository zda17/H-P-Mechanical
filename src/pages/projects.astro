---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";

import TestimonialsSectionAlt from "@components/sections/testimonials/TestimonialsSectionAlt.astro";

// Import necessary images
import HeroImageAlt from "@images/hero-image-3.png";
import HeroImageAltTwo from "@images/hero-image-4.png";
import example6 from "@images/example6.webp";
import example7 from "@images/example7.jpeg";
import example4 from "@images/example4.jpg";
import example8 from "@images/example8.jpg";
import example1 from "src/images/example1.jpg";
import example2 from "@/images/example2.jpg";
import example9 from "@/images/example9.jpg";
import example10 from "@/images/example10.jpg";
import example11 from "@images/example11.webp";
import example12 from "@/images/example12.jpg";
import example13 from "@/images/example13.webp";
import example14 from "@/images/example14.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
  imgPosition?: string;
}

const articles: Article[] = [
  {
    isRightSection: false,
    title: "Residential AC Installation",
    subTitle: "Complete air conditioning system installation for a local residence. Our team installed a high-efficiency unit to provide reliable cooling during the hot summer months, ensuring maximum comfort and energy savings for the homeowner.",
    single: false,
    imgOne: example6,
    imgOneAlt: "HVAC technician installing AC unit",
    imgTwo: example7,
    imgTwoAlt: "Completed AC installation",
    btnExists: true,
    btnTitle: "Get a quote",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Commercial Heating System Upgrade",
    subTitle: "Upgraded the heating system for a local business, replacing outdated equipment with a modern, energy-efficient solution. The new system provides consistent warmth throughout the facility while reducing monthly energy costs.",
    single: false,
    imgOne: example4,
    imgOneAlt: "Commercial heating equipment",
    imgTwo: example8,
    imgTwoAlt: "New heating system installed",
    btnExists: true,
    btnTitle: "Get a quote",
    btnURL: "/contact",
  },
  {
    isRightSection: false,
    title: "Ductwork Repair & Optimization",
    subTitle: "Comprehensive ductwork inspection and repair for improved airflow and efficiency. Our team sealed leaks, replaced damaged sections, and optimized the entire system to ensure even temperature distribution throughout the property.",
    single: false,
    imgOne: example1,
    imgOneAlt: "Ductwork repair in progress",
    imgTwo: example2,
    imgTwoAlt: "Completed ductwork installation",
    btnExists: true,
    btnTitle: "Get a quote",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Emergency Furnace Replacement",
    subTitle: "Rapid response to a heating emergencyâ€”replaced a failing furnace with a new high-efficiency unit. Our team completed the installation quickly to restore warmth to the home before temperatures dropped further.",
    single: false,
    imgOne: example11,
    imgOneAlt: "Furnace components",
    imgTwo: example12,
    imgTwoAlt: "New furnace installation",
    btnExists: true,
    btnTitle: "Get a quote",
    btnURL: "/contact",
  },
  {
    isRightSection: false,
    title: "Mini-Split System Installation",
    subTitle: "Installed ductless mini-split systems for 2 homes that lacked existing ductwork. This efficient solution provides both heating and cooling with individual zone control for maximum comfort and flexibility.",
    single: false,
    imgOne: example9,
    imgOneAlt: "Mini-split outdoor unit",
    imgTwo: example10,
    imgPosition: "top",
    imgTwoAlt: "Mini-split indoor unit installed",
    btnExists: true,
    btnTitle: "Get a quote",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Preventative Maintenance Program",
    subTitle: "Regular AC maintenance visit as part of our comprehensive care plan. Our technicians performed a thorough inspection, cleaned the condenser coils, checked refrigerant levels, and made adjustments to ensure optimal cooling performance and extend the system's lifespan.",
    single: false,
    imgOne: example13,
    imgOneAlt: "HVAC maintenance in progress",
    imgTwo: example14,
    imgTwoAlt: "System inspection",
    btnExists: true,
    btnTitle: "Get a quote",
    btnURL: "/contact",
  },
];

const pageTitle: string = `Projects | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://ktchvac.com/projects",
    "url": "https://ktchvac.com/projects",
    "name": `Our Latest Projects | ${SITE.title}`,
    "description": SITE.description,
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://ktchvac.com",
        "name": SITE.title,
        "description": SITE.description
    },
    "inLanguage": "en-US"
  }}
>
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      const Component = ( article.isRightSection ) ? RightSection : LeftSection;

      return (
        <Component
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
          imgPosition={article.imgPosition}
        />
      )
    })
  }

  <TestimonialsSectionAlt />

  <HeroSectionAlt
    title="H & P Mechanical"
    subTitle="Your trusted partner for all heating, cooling, and ventilation needs. Contact us today for a free quote."
    btnTitle="Get a Quote"
    url="/contact"
  />
</MainLayout>
