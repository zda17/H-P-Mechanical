---
// Importing necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import FeaturesStatsAlt from "@components/sections/features/FeaturesStatsAlt.astro";
import TestimonialsSectionAlt from "@components/sections/testimonials/TestimonialsSectionAlt.astro";
import { Image } from "astro:assets";

import { SITE } from "@data/constants";

// Import images for services
import heatingImg from "@images/heating-installation.jpg";
import acImg from "@images/AC.png";
import constructionImg from "@images/construction-workers.avif";
import gasImg from "@images/gas-valve.jpg";
import airQualityImg from "@images/air-quality.jpg";
import ventilationImg from "@images/ventilation.webp";
import commercialImg from "@images/H&P-office.jpeg";
import maintenanceImg from "@images/hvac-lifespan.png";
import emergencyImg from "@images/repair.webp";

const servicesList = [
  {
    id: 1,
    title: "Heating Services",
    description: "Stay warm and energy-efficient with our expert heating solutions",
    image: heatingImg,
    features: [
      "Furnace Installation & Replacement",
      "Heating Repair",
      "Preventative Maintenance",
      "Heat Pump Services"
    ]
  },
  {
    id: 2,
    title: "Cooling Services",
    description: "Keep your home cool with our professional cooling services",
    image: acImg,
    features: [
      "AC Installation & Replacement",
      "AC Repair",
      "Seasonal Maintenance",
      "Ductless Mini-Splits"
    ]
  },
  {
    id: 3,
    title: "New Construction HVAC",
    description: "HVAC solutions for new construction projects",
    image: constructionImg,
    features: [
      "Residential HVAC",
      "Commercial HVAC",
      "System Design & Consultation",
      "Ductwork Installation"
    ]
  },
  {
    id: 4,
    title: "Gas Line Services",
    description: "Safe and efficient gas line services",
    image: gasImg,
    features: [
      "Gas Line Installation",
      "Gas Line Repairs",
      "Gas Line Inspections",
      "Gas Appliance Hookups"
    ]
  },
  {
    id: 5,
    title: "Indoor Air Quality",
    description: "Improve the air you breathe",
    image: airQualityImg,
    features: [
      "Air Purification Systems",
      "Humidifiers & Dehumidifiers",
      "Duct Cleaning Services"
    ]
  },
  {
    id: 6,
    title: "Ductwork Services",
    description: "Essential for efficient HVAC operation",
    image: ventilationImg,
    features: [
      "Duct Installation",
      "Duct Repair & Sealing",
      "Duct Modifications"
    ]
  },
  {
    id: 7,
    title: "Commercial HVAC",
    description: "Tailored solutions for businesses",
    image: commercialImg,
    features: [
      "HVAC System Installation",
      "Routine Maintenance Plans",
      "Emergency Repairs"
    ]
  },
  {
    id: 8,
    title: "Maintenance Agreements",
    description: "Keep your HVAC system in top condition",
    image: maintenanceImg,
    features: [
      "Scheduled Inspections",
      "Priority Service",
      "Discounted Repairs",
      "Energy Efficiency"
    ]
  },
  {
    id: 9,
    title: "Emergency Services",
    description: "24/7 emergency HVAC services",
    image: emergencyImg,
    features: [
      "24/7 Emergency Response",
      "Rapid Diagnostics",
      "All Systems Serviced",
      "Expert Team"
    ]
  }
];

// Define variables for page content
const title: string = "Services";

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://ktchvac.com/services",
    "url": "https://ktchvac.com/services",
    "name": `Services | ${SITE.title}`,
    "description": "Explore the durability and precision of ScrewFast tools, designed for both professionals and enthusiasts.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://ktchvac.com",
      "name": SITE.title,
      "description": `${SITE.title} offers top-quality HVAC solutions to keep your home or business comfortable all year long.`
    },
    "inLanguage": "en-US"
  }}
>
  <div
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div class="mb-4 flex flex-col justify-between gap-8 sm:mb-8 md:mb-12">
      <div class="w-full flex items-center justify-between gap-12">
        <h1
          class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
        >
          {title}
        </h1>

        <SecondaryCTA title="Reviews" url="#testimonials" />
      </div>

      <p class="w-full text-left text-neutral-700 dark:text-white">
        H & P Heating and Air Conditioning delivers expert HVAC services designed to keep your space comfortable in every season. From precision installations to responsive repairs, our skilled technicians are committed to quality workmanship and customer satisfaction. Trust us for all your heating, cooling, and ventilation needsâ€”we've got you covered.
      </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {
          servicesList.map((service) => (
            <div class="group flex flex-col h-full overflow-hidden rounded-xl bg-white shadow-lg transition-all duration-300 hover:shadow-xl dark:bg-neutral-800">
              {/* Image container with hover animation */}
              <div class="relative h-48 w-full overflow-hidden">
                <Image
                  src={service.image}
                  alt={service.title}
                  class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  draggable={"false"}
                  format={"avif"}
                  loading={"lazy"}
                />
              </div>
              {/* Content */}
              <div class="flex flex-col flex-grow p-6">
                <h3 class="text-xl font-bold text-red-500 dark:text-red-400 mb-2">
                  {service.title}
                </h3>
                <p class="text-neutral-600 dark:text-neutral-400 mb-4 text-sm">
                  {service.description}
                </p>
                <ul class="mt-auto space-y-2">
                  {service.features.map((feature) => (
                    <li class="flex items-start gap-2 text-neutral-700 dark:text-neutral-300">
                      <svg 
                        class="w-4 h-4 text-red-500 mt-0.5 flex-shrink-0" 
                        fill="none" 
                        stroke="currentColor" 
                        viewBox="0 0 24 24"
                      >
                        <path 
                          stroke-linecap="round" 
                          stroke-linejoin="round" 
                          stroke-width="2" 
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                      <span class="text-sm">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
  </div>

  <div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <!--Features statistics section-->
    <FeaturesStatsAlt
      title="Why Choose H & P Heating and Air Conditioning?"
      subTitle="We are committed to delivering exceptional service and ensuring complete customer satisfaction with every job."
      benefits={[
        "Expert HVAC technicians for reliable and efficient services.",
        "Emergency repairs available for unexpected issues.",
        "Affordable pricing for all HVAC needs.",
      ]}
    />
  </div>

  <!--Testimonials section-->
  <TestimonialsSectionAlt
    title="What Our Customers Say"
  />
</MainLayout>
